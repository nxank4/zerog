{
  "name": "zerog",
  "displayName": "Zero-G",
  "description": "Experience weightless coding with local AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zerog-sidebar",
          "title": "Zero-G AI",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "zerog-sidebar": [
        {
          "type": "webview",
          "id": "zerog.chatView",
          "name": "AI Chat",
          "icon": "$(comment-discussion)"
        },
        {
          "id": "zerog.historyView",
          "name": "History",
          "icon": "$(history)"
        }
      ]
    },
    "commands": [
      {
        "command": "zerog.openChat",
        "title": "Zero-G: Open AI Chat"
      },
      {
        "command": "zerog.inlineEdit",
        "title": "Zero-G: Inline Edit"
      },
      {
        "command": "zerog.acceptDiff",
        "title": "Accept AI Suggestion",
        "icon": "$(check)"
      },
      {
        "command": "zerog.discardDiff",
        "title": "Discard AI Suggestion",
        "icon": "$(close)"
      },
      {
        "command": "zerog.newChat",
        "title": "Zero-G: New Chat",
        "icon": "$(add)"
      },
      {
        "command": "zerog.openSession",
        "title": "Zero-G: Open Session"
      },
      {
        "command": "zerog.deleteSession",
        "title": "Delete Session",
        "icon": "$(trash)"
      },
      {
        "command": "zerog.renameSession",
        "title": "Rename Session",
        "icon": "$(edit)"
      },
      {
        "command": "zerog.cycleMode",
        "title": "Zero-G: Cycle Mode"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zerog.newChat",
          "when": "view == zerog.historyView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "zerog.renameSession",
          "when": "viewItem == session",
          "group": "inline@1"
        },
        {
          "command": "zerog.deleteSession",
          "when": "viewItem == session",
          "group": "inline@2"
        },
        {
          "command": "zerog.renameSession",
          "when": "viewItem == session",
          "group": "1_modification@1"
        },
        {
          "command": "zerog.deleteSession",
          "when": "viewItem == session",
          "group": "1_modification@2"
        }
      ],
      "editor/title": [
        {
          "command": "zerog.acceptDiff",
          "group": "navigation@1",
          "when": "zerog.diffReviewActive"
        },
        {
          "command": "zerog.discardDiff",
          "group": "navigation@2",
          "when": "zerog.diffReviewActive"
        }
      ]
    },
    "keybindings": [
      {
        "command": "zerog.inlineEdit",
        "key": "ctrl+alt+k",
        "mac": "cmd+k",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "zerog.cycleMode",
        "key": "ctrl+tab",
        "mac": "ctrl+tab"
      }
    ],
    "configuration": [
      {
        "title": "Zero-G — General",
        "properties": {
          "zerog.general.mode": {
            "type": "string",
            "default": "ask",
            "enum": [
              "ask",
              "planner",
              "agent",
              "debug"
            ],
            "markdownDescription": "Default interaction mode when opening a new chat."
          },
          "zerog.general.language": {
            "type": "string",
            "default": "auto",
            "markdownDescription": "Preferred response language. Use `auto` to match the editor locale."
          },
          "zerog.general.enableAutocomplete": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Enable AI-powered **ghost text** inline completions (Copilot-style)."
          }
        }
      },
      {
        "title": "Zero-G — UI",
        "properties": {
          "zerog.ui.theme": {
            "type": "string",
            "default": "system",
            "enum": [
              "system",
              "zerog-dark",
              "midnight",
              "matrix",
              "latte"
            ],
            "enumDescriptions": [
              "Match VS Code's current theme",
              "Zero-G default dark theme",
              "Deep blue with sky blue accents",
              "Neon green on black",
              "Warm light sepia tone"
            ],
            "markdownDescription": "Color theme for the Zero-G sidebar."
          }
        }
      },
      {
        "title": "Zero-G — Connection",
        "properties": {
          "zerog.connection.provider": {
            "type": "string",
            "default": "antigravity",
            "markdownDescription": "AI provider backend identifier."
          },
          "zerog.connection.baseUrl": {
            "type": "string",
            "default": "http://localhost:8080",
            "markdownDescription": "Base URL for the AI proxy (e.g. `http://localhost:8080`)."
          },
          "zerog.connection.apiKey": {
            "type": "string",
            "default": "test",
            "markdownDescription": "API key / auth token for the AI proxy."
          },
          "zerog.connection.model": {
            "type": "string",
            "default": "claude-opus-4-6-thinking",
            "markdownDescription": "Model identifier sent to the provider (e.g. `claude-opus-4-6-thinking`)."
          }
        }
      },
      {
        "title": "Zero-G — Agent Capabilities",
        "properties": {
          "zerog.agent.allowTerminal": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "Allow the agent to execute terminal commands automatically."
          },
          "zerog.agent.autoApplyDiff": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "Automatically apply file diffs without manual review."
          },
          "zerog.agent.maxIterations": {
            "type": "number",
            "default": 5,
            "minimum": 1,
            "maximum": 50,
            "markdownDescription": "Maximum number of plan tasks the agent will execute in a single run."
          }
        }
      },
      {
        "title": "Zero-G — Advanced",
        "properties": {
          "zerog.advanced.temperature": {
            "type": "number",
            "default": 0.7,
            "minimum": 0,
            "maximum": 2,
            "markdownDescription": "Sampling temperature for AI responses. Lower = more deterministic."
          },
          "zerog.advanced.systemPrompt": {
            "type": "string",
            "default": "",
            "markdownDescription": "Custom system prompt. Leave empty to use the built-in default."
          },
          "zerog.advanced.contextLimit": {
            "type": "number",
            "default": 4096,
            "minimum": 256,
            "maximum": 32768,
            "markdownDescription": "Maximum number of tokens in chat responses."
          },
          "zerog.advanced.debugMode": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "Enable verbose console logging for debugging."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@types/markdown-it": "^14.1.2",
    "@vscode/codicons": "^0.0.44",
    "axios": "^1.13.5",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "minisearch": "^7.2.0"
  }
}
